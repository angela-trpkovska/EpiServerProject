@using EPiServer.Core;
@model EpiServerProject.Models.Blocks.SteelShotTextBlock
<style type="text/css">
 .quality-rules{
     background:rgba(11, 11, 11, 0.9);
     color:#ffffff;
     padding: 20px;
    text-align: left;
    font-size: 13px;
    line-height: 18px;
    font-family: open-sans, sans-serif;
    font-weight: 400;
   }

 .btn-primary {
    margin-top:30px;
    border: 0 none;
    border-radius:0;
    text-align: center;
    font-size:22px;
    font-weight: 400;
    font-family: open-sans, sans-serif;
    text-transform: uppercase;

    background: -webkit-gradient(linear, center top, center bottom, from(#1CB2D5),color-stop(100%, #225068));
    background: -webkit-linear-gradient(top,#1CB2D5 ,#225068 100%);
    background: -moz-linear-gradient(top,#1CB2D5 ,#225068 100%);
    background: -ms-linear-gradient(top,#1CB2D5 ,#225068 100%);
    background: -o-linear-gradient(top,#1CB2D5 ,#225068 100%);
    background: linear-gradient(to bottom,#1CB2D5 ,#225068 100%);
    color: #E1E4E7;
}

 .btn-primary:hover{
     
    background: -webkit-gradient(linear, center top, center bottom, from(#1CB2D5),color-stop(100%, #225068));
    background: -webkit-linear-gradient(top,#1CB2D5 ,#225068 100%);
    background: -moz-linear-gradient(top,#1CB2D5 ,#225068 100%);
    background: -ms-linear-gradient(top,#1CB2D5 ,#225068 100%);
    background: -o-linear-gradient(top,#1CB2D5 ,#225068 100%);
    background: linear-gradient(to bottom,#1CB2D5 ,#225068 100%);
    color: #E1E4E7;

 }
</style>


<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <button type="button" class="btn btn-primary">@Html.PropertyFor(m => m.Title)</button>
        <div class="quality-rules">@Html.PropertyFor(m => m.Body)</div>
    </div>
</div>
