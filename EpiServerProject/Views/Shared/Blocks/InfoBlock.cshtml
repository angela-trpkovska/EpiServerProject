@using EPiServer.Core;
@model EpiServerProject.Models.Blocks.InfoBlock
<style type="text/css">
.panel-info{
     background-color: rgba(7, 14, 17, 0.9);
     border:0;
     text-align:right;
}
 .panel> .panel-red {
   background:linear-gradient(to bottom,#E03F4E ,#531D30 100%);
   text-align: center;
    font-size: 18px;
    color: #E1E4E7;
    font-family: open-sans, sans-serif;
    font-weight: 100;
}

.panel .panel-info>.panel-body .form-body>.company-info >.fb-logo{
     margin-top:20px;
     padding-top:20px;
 }

</style>

<div class="col-md-7">
            <div class="panel panel-info">
                <div class="panel-heading panel-red"><b>INFO</b></div>
                <div class="panel-body form-body">
                    <div class="col-md-8">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d228166.1454220504!2d21.17139735169056!3d41.28979298790565!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1356d3c831d7ea8b%3A0x5e273a162318abaa!2sZELEZNIK+AD!5e0!3m2!1sen!2smk!4v1443353721671" width="400" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                    <div class="col-md-4">
                        <div class="company-info">
                            <p><span style="color:#1CB2D5;font-size: 15px;text-align:left"><b>@Html.PropertyFor(x => x.CompanyName)<br></b></span></p>
                            <p><span style="color:#ffffff">@Html.PropertyFor(x => x.CompanyAddress)</span><br></p>
                            <p><span style="color:#1CB2D5">TEL:</span><br><span style="color:#ffffff">@Html.PropertyFor(x => x.CompanyTelephones)</span></p>
                            <p><span style="color:#1CB2D5">FAX:</span><br><span style="color:#ffffff">@Html.PropertyFor(x => x.CompanyFax)</span></p>
                            <p><span style="color:#1CB2D5">E-MAIL:</span><br><span style="color:#ffffff">@Html.PropertyFor(x => x.CompanyEmail)</span></p>
                            <a target="_blank" title="find us on Facebook" href="http://www.facebook.com/zeleznik.ad"><img class="fb-logo" alt="follow me on facebook" src="~/Static/images/fblogo.png"></a>
                        </div>
                   </div>
                </div>
            </div>
        </div>



